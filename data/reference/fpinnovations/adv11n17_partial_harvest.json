        "extraction": [
          "Komatsu PC75UU-2 excavator with modified grapple (hoe-forwarding)",
          "Timberjack 1210 forwarder"
        ],
        "processing": "Chainsaw at stump",
        "decking": "Forwarder at landing"
      },
      "pre_harvest_stand": {
        "pine_percent": 30,
        "spruce_percent": 39,
        "subalpine_fir_percent": 13,
        "douglas_fir_percent": 0,
        "deciduous_percent": 18,
        "average_tree_volume_m3": 0.7,
        "bec": "SBSwk1",
        "slope_percent_range": [
          0,
          10
        ],
        "slope_percent_average": 3
      },
      "harvest_output": {
        "volume_m3": 1330,
        "volume_per_ha_m3": 61.9
      },
      "mt_dfp": {
        "pre": 0.09,
        "post": 0.10,
        "classification_post": "stocked"
      },
      "trail_stats": {
        "average_trail_width_m": 3.5,
        "total_trail_length_m": 2000,
